			$NewFileName_service 		= $Random_Number_service.$File_Ext_service; //new file name
			
			if(move_uploaded_file($_FILES['companyServicesImage']['tmp_name'], $UploadDirectory.$NewFileName_service ))
			   {
				die('فایل آپلود شد.');
